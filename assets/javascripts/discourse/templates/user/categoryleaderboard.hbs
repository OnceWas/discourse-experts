{{#if model.expert_categories}}
  <div class='experts-container'>
    <table class='experts-table'>
      <thead>
        <tr>
          <th class='experts-table-th'>Category    </th>
          <th class='experts-table-th'>Rank        </th>
          <th class='experts-table-th'>Likes       </th>
          <th class='experts-table-th'>Posts       </th>
          <th class='experts-table-th'>Reads       </th>
          <th class='experts-table-th'>Top Answers </th>
        </tr>
      </thead>
      <tbody>
        {{#each category in model.expert_categories}}
          <tr>
            <td class='experts-table-td'>
              <span class="category">
                {{category-link category.category}}
              </span>
            </td>
            <td class='experts-table-td'>
              <span class='experts-rank'>Rank</span> {{category.rank}}
            </td>
            <td class='experts-table-td'>
              <span class='experts-likes'><i class='fa fa-heart'></i></span> {{category.likes}}
            </td>
            <td class='experts-table-td'>
              <span class='experts-posts'>Posts</span> {{category.posts}}
            </td>
            <td class='experts-table-td'>
              <span class='experts-views'>Reads</span> {{category.reads}}
            </td>
            <td class='experts-table-td'>
              <span class='experts-topanswers'>Top Answers</span> {{category.top_answers}}
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
{{else}}
  <div class="alert alert-info">
    No expert topics found.
  </div>
{{/if}}
